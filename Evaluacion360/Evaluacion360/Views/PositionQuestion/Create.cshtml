@model Evaluacion360.Models.ViewModels.PositionQuestionViewModel

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ingreso de Preguntas</title>
    <!-- meta tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Pooled Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript">

        addEventListener("load", function()
            { setTimeout(hideURLbar, 0); },
            false);
            function hideURLbar()
            { window.scrollTo(0,1); }

        window.setTimeout(function () {
            $(".alert-success").fadeTo(500, 0).slideUp(500, function () {
            $(this).remove();
            }); }, 3000);
        window.setTimeout(function () {
            $(".alert-danger").fadeTo(500, 0).slideUp(500, function () {
            $(this).remove();
            }); }, 8000);
    </script>

    <!-- Bootstrap Core CSS -->
    <link href="~/Css-Pool/bootstrap.min.css" rel="stylesheet" type='text/css' />

    <!-- Custom CSS -->
    <link href="~/Css-Pool/style2.css" rel='stylesheet' type='text/css' />
    <link href="~/Css-Modernizer/style.css" rel="stylesheet" />

    <!-- Graph CSS -->
    <link href="~/Css-Pool/font-awesome.css" rel="stylesheet" />
    <link href="~/Css/jquery-ui.css" rel="stylesheet" />
    <!-- jQuery -->
    <script src="~/js/jquery-2.1.4.min.js"></script>
    <!-- //jQuery -->
    <link href="~/Css/table-style.css" rel="stylesheet" type="text/css" />
    <link href="~/Css/basictable.css" rel="stylesheet" type="text/css" />
    <link href="~/Css/datatables.css" rel="stylesheet" />

    <script src="~/js/jquery.basictable.min.js"></script>
    <script src="~/js/datatables.js"></script>

    <link href='//fonts.googleapis.com/css?family=Roboto:700,500,300,100italic,100,400' rel='stylesheet' type='text/css' />
    <link href='//fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css' />
    <!-- lined-icons -->
    <link href="~/Css/icon-font.min.css" rel="stylesheet" type='text/css' />
    <!-- //lined-icons -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

</head>
<body>

    @if (ViewBag.Message != null)
    {
        if (ViewBag.Status)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong style="font-size:medium">@ViewBag.Message</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        if (!ViewBag.Status)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong style="font-size:medium">@ViewBag.Message</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    }
    @Html.AntiForgeryToken()

    <div id="Mensaje">

    </div>
    <div class="container">
        <div class="panel-body" , style="background-color:#fff">
            <div class="notification_header" style="text-align:center">
                <h1 class="center-block">Crear Pregunta por Cargo</h1>
            </div>
            <br />
            <form form="role" class="form-horizontal" action="Create" method="post">
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group has-feedback">
                    <label class="col-md-3 control-label ">Cargo Evaluador</label>
                    <div class="col-md-5" style="width:34%">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-puzzle-piece"></i></span>
                            @Html.DropDownListFor(model => model.Codigo_Cargo, (SelectList)ViewBag.Cargos, "Seleccione Cargo Evaluador", new { type = "text", width = "60%", @class = "form-control1", @required = "required", style = "font-size: 70%; font-family: 'Roboto', sans-serif; line-height: 8px" })
                        </div>
                    </div>
                    <label class="col-md-2 control-label" style="width: auto">Ponderación</label>
                    <div class="col-md-1">
                        @Html.CheckBox("false", new { id = "ponderacion", style = "margin-top:12px;" })
                    </div>
                </div>


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group has-feedback">
                    <label class="col-md-3 control-label ">Cargo Evaluado</label>
                    <div class="col-md-8">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-list-ol"></i></span>
                            @Html.DropDownListFor(model => model.Cod_Cargo_Evaluado, (SelectList)ViewBag.Cargos, "Seleccione Cargo Evaluado", new { type = "text", @class = "form-control1", @required = "required", style = "font-size: 70%; font-family: 'Roboto', sans-serif; line-height: 8px" })
                        </div>
                    </div>
                </div>

                <div class="form-group has-feedback">
                    <label class="col-md-3 control-label ">Dominio</label>
                    <div class="col-md-8">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-sticky-note"></i></span>
                            @Html.DropDownListFor(model => model.Codigo_seccion, (SelectList)ViewBag.Section, "Seleccione Dominio", new { type = "text", @class = "form-control1", @required = "required", style = "font-size: 70%; font-family: 'Roboto', sans-serif; line-height: 8px" })
                        </div>
                    </div>
                </div>

                <label class="col-md-2"></label>
                <div class="panel-group col-md-8" style="width:56.5%">
                    <div class="panelm panelm-default">
                        <div class="panelm-heading" data-toggle="tooltip" data-placement="top" title="Haga click Aquí para Oculta o Mostrar la Grilla">
                            <h4 class="panel-title" style="color:black; width:85px">
                                <a id="collapse" data-toggle="collapse" href="#collapse1">Preguntas</a>
                            </h4>
                        </div>
                        <div id="collapse1" class="panel-collapse collapse show" style="width:100%">
                            <div class="panel-body">
                                <table class="col-md-12" id="tblPreguntas" style="margin:auto 14px; width:95%">
                                    <thead>
                                        <tr>
                                            <th style="font-size:small"> @Html.DisplayName("Sel")</th>
                                            <th style="font-size:small"> @Html.DisplayName("Nro")</th>
                                            <th style="font-size:small"> @Html.DisplayName("Pregunta")</th>
                                            <th style="font-size:small"> @Html.DisplayName("Ponderación")</th>
                                        </tr>
                                    </thead>
                                    <tbody id="res">
                                        <tr>
                                            <td class="text-center" style="font-size:small"><input type="checkbox" id="checkBoxAll" class="'ori'"></td>
                                            <td style="font-size:smaller">Todos</td>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container">
                    <div id="loading" class="text-center" style="display:none">
                        <img src="~/Content/ajax-loader.gif" />
                    </div>
                </div>

                <div class="form-group has-feedback">
                    <label class="col-md-3 control-label">Estado</label>
                    <div class="col-md-8">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-question"></i></span>
                            @Html.DropDownListFor(model => model.IdState, (SelectList)ViewBag.State, "Seleccione Estado de Pregunta", new { type = "text", @class = "form-control1", @required = "required", style = "font-size: 70%; font-family: 'Roboto', sans-serif; line-height: 8px" })
                        </div>
                    </div>
                </div>

                <div class="panel-footer">
                    <div class="form-group">
                        <label class="col-md-3 control-label"></label>
                        <div class="justify-content-center">
                            <input class="btn btn-danger btn-sm" id="RQCreate" type="button" value="Crear Pregunta" />
                            <button class="btn btn-success btn-sm" id="backToList" onclick="location.href='@Url.Action("List", "PositionQuestion")'" type="button">Volver a la Lista</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $("#ponderacion").change(function () {
                $("#Numero_Pregunta").empty();
            })

            $("#tblPreguntas tbody").on("change", "input[type='checkbox'].ori", function () {
                $("#tblPreguntas tbody input[type='checkbox'].case").prop("checked", this.checked);
                ValidaPonderacion();
            });

            $("#tblPreguntas tbody").on("change", "input[type='checkbox'].case", function () {
                if ($("#tblPreguntas tbody input[type='checkbox'].case").length == $("#tblPreguntas tbody input[type='checkbox'].case:checked").length) {
                    $("#checkBoxAll").prop("checked", true);
                } else {
                    $("#checkBoxAll").prop("checked", false);
                }
                ValidaPonderacion();
            });

            function ValidaPonderacion (){
                var suma = 0;
                $('.case').each(function () {
                    if (this.checked) {
                        var valPonde = $(this).parents("tr").find("td")[3].innerHTML;
                        suma += parseFloat( valPonde);
                        if (suma > 100) {
                            let msg = document.querySelector('#Mensaje');
                            msg.innerHTML =
                                `<div class="alert alert-danger alert-dismissible fade show" role="alert" id="alertInfo" >
                                    <strong style="font-size:medium">La suma de ponderaciones no puede sumar más de 100%</strong>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>`;
                            window.setTimeout(function () {
                                $("#alertInfo").alert('close');
                            }, 4000);
                            $('#tblPreguntas input[type="checkbox"].case').prop("checked", false).trigger("change");
                            return
                        }
                    }
                })
            }

            $("#Codigo_seccion").change(function () {
                let res = document.querySelector('#res');
                res.innerHTML = '';
                $("#Numero_Pregunta").empty();
                var index = $("#Codigo_seccion")[0].selectedIndex;
                if (index != 0) {
                    var selTypeText = $("#Codigo_seccion option:selected").text();
                    var ponderacion = document.getElementById("ponderacion").checked;
                    $.get("/PositionQuestion/GetPreguntas", { codSec: $("#Codigo_seccion").val(), ponderacion }, function (data, status) {
                        if (data.length > 0) {
                            let res = document.querySelector('#res');
                            res.innerHTML = '';
                            res.innerHTML += `
                                <tr>
                                    <td class="text-center" style="font-size:small"><input type="checkbox" id="checkBoxAll" class='ori'></td>
                                    <td style="font-size:smaller">Todos</td>
                                    <td></td>
                                    <td></td>
                                </tr>`
                            $.each(data, function (index, item) {
                                res.innerHTML += `
                                    <tr>
                                        <td class="text-center" style="font-size:small"><input type='checkbox' id='QuestionNo' class='case'></td>
                                        <td style="font-size:smaller">${item.Numero_Pregunta}</td>
                                        <td style="font-size:smaller">${item.Texto_Pregunta}</td>
                                        <td style="font-size:smaller" class="text-right">${item.Ponderacion_P}</td>
                                    </tr>`
                            })
                            $('#collapse').trigger('click');
                            
                        }
                        else {
                            var info = "No existen preguntas para este Dominio";
                            if (ponderacion) {
                                info += " con Ponderación";
                            }
                            else {
                                info += " sin Ponderación";
                            }
                            let msg = document.querySelector('#Mensaje');
                            msg.innerHTML =
                                `<div class="alert alert-danger alert-dismissible fade show" role="alert" id="alertInfo" >
                                    <strong style="font-size:medium">${info}</strong>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>`;
                            window.setTimeout(function () {
                                $("#alertInfo").alert('close');
                            }, 4000);
                        }
                    });
                }
            })

            $("#RQCreate").on("click", function () {
                validarPreguntas();
            })

            function validarPreguntas() {
                var valido = false;
                var cant = $("#tblPreguntas tbody input:checkbox:checked.case").length;
                if (cant > 0) {
                    GrabaPreguntasPorCargo();
                } else {
                    var info = "No ha seleccionado Preguntas";
                    let msg = document.querySelector('#Mensaje');
                    msg.innerHTML =
                        `<div class="alert alert-danger alert-dismissible fade show" role="alert" id="alertInfo" >
                            <strong style="font-size:medium">${info}</strong>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>`;
                    window.setTimeout(function () {
                        $("#alertInfo").alert('close');
                    }, 4000);
                    return;
                }
            };


            function GrabaPreguntasPorCargo() {
                showLoader();
                var arrDatos = [];
                $('.case').each(function () {
                    if (this.checked) {
                        //var checkBox = $(this).parents("tr").find("td")[0].innerHTML;
                        var numQuest = $(this).parents("tr").find("td")[1].innerHTML;
                        //var txtQuest = $(this).parents("tr").find("td")[2].innerHTML;
                        //var valPonde = $(this).parents("tr").find("td")[3].innerHTML;

                        var newData = {
                            Codigo_Cargo: $('#Codigo_Cargo').val(),
                            Cod_Cargo_Evaluado: $('#Cod_Cargo_Evaluado').val(),
                            Codigo_Seccion: $("#Codigo_seccion").val(),
                            Numero_Pregunta: numQuest,
                            IdState: $('#IdState').val(),
                        };
                        arrDatos.push(newData);
                    }
                })
                $.ajax({
                    type: "POST",
                    url: "/PositionQuestion/Create",
                    dataType: 'json',
                    data: JSON.stringify(arrDatos),
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        let msg = document.querySelector('#Mensaje');
                        msg.innerHTML =
                            `<div class="alert alert-success alert-dismissible fade show" role="alert" id="alertInfo">
                                <strong style="font-size:medium">Preguntas por Cargo ingresadas al sistema de Evaluación</strong>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>`;
                        window.setTimeout(function () {
                            $("#alertInfo").alert('close');
                        }, 4000);
                    },
                    error: function (Mensaje) {
                        let msg = document.querySelector('#mensaje');
                        msg.innerHTML =
                            `<div class="alert alert-danger alert-dismissible fade show" role="alert" id="alertInfo" >
                                <strong style="font-size:medium">${Mensaje}</strong>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>`;
                        window.setTimeout(function () {
                            $("#alertInfo").alert('close');
                        }, 4000);
                        hideLoader();
                        return;
                    }
                })
                hideLoader();
            };

            function showLoader() {
                $('#loading').show();
            };

            function hideLoader() {
                $('#loading').fadeOut();
            };
        })
    </script>
</body>
</html>

