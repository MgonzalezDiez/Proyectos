@model Evaluacion360.Models.ViewModels.PQViewModel

@{
    ViewBag.Title = "Eliminar Pregunta por Cargo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar Pregunta por Cargo</title>
    <!-- meta tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Pooled Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript">

        addEventListener("load", function()
            { setTimeout(hideURLbar, 0); },
            false);
            function hideURLbar()
            { window.scrollTo(0,1); }
    </script>

    <!-- Bootstrap Core CSS -->
    <link href="~/Css-Pool/bootstrap.min.css" rel="stylesheet" type='text/css' />

    <!-- Custom CSS -->
    <link href="~/Css-Pool/style2.css" rel='stylesheet' type='text/css' />
    <link href="~/Css-Modernizer/style.css" rel="stylesheet" />

    <!-- Graph CSS -->
    <link href="~/Css-Pool/font-awesome.css" rel="stylesheet" />
    <link href="~/Css/jquery-ui.css" rel="stylesheet" />

    <!-- jQuery -->
    <script src="~/js/jquery-2.1.4.min.js"></script>
    <!-- //jQuery -->

    <link href='//fonts.googleapis.com/css?family=Roboto:700,500,300,100italic,100,400' rel='stylesheet' type='text/css' />
    <link href='//fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css' />

    <!-- lined-icons -->
    <link href="~/Css/icon-font.min.css" rel="stylesheet" type='text/css' />
    <!-- //lined-icons -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

</head>

<body>
    <div class="panel-body" , style="background-color:#fff">
        <div class="notification_header" style="text-align:center">
            <h1 class="center-block">Eliminar Pregunta por Cargo</h1>
        </div>
        <br />
        <form form="role" class="form-horizontal" action="Delete" method="post">

            <div form="role" class="form-group has-feedback">
                @Html.AntiForgeryToken()
                <label class="col-md-3 control-label">Cargo</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user-secret"></i></span>
                        @Html.HiddenFor(x => x.Codigo_Cargo)
                        @Html.DropDownListFor(model => model.Codigo_Cargo, (SelectList)ViewBag.Cargos, "Seleccione Cargo", new { @id = "CodCargo", type = "text", @class = "form-control1", style = "font-size: 70%; font-family: 'Roboto', sans-serif; line-height: 8px; width:70%" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Cargo Evaluado</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        @Html.HiddenFor(x => x.Cod_Cargo_Evaluado)
                        @Html.DropDownListFor(model => model.Cod_Cargo_Evaluado, (SelectList)ViewBag.Cargos, "Seleccione Cargo Evaluado", new { type = "text", @class = "form-control1", style = "font-size: 70%; font-family: 'Roboto', sans-serif; line-height: 8px; width:70%" })
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label">Sección</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user-plus"></i></span>
                        @Html.HiddenFor(x => x.Codigo_seccion)
                        @Html.DropDownListFor(model => model.Codigo_seccion, (SelectList)ViewBag.Section, "Seleccione Dominio", new { type = "text", @class = "form-control1", style = "font-size: 70%; font-family: 'Roboto', sans-serif; line-height: 8px; width:70%" })
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label">Nro. de Pregunta</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user-plus"></i></span>
                        @Html.HiddenFor(x => x.Numero_Pregunta)
                        @Html.EditorFor(model => model.Numero_Pregunta, new { htmlAttributes = new { @readonly = "readonly", type = "text", @class = "form-control1", style = "width:70%" } })
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <br />
            <div class="panel-footer">
                <label class="col-md-3 control-label"></label>
                <div class="justify-content-center">
                    <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#myModal">Eliminar Pregunta</button>
                    <input class="btn btn-success btn-sm" onclick="location.href='@Url.Action("List", "PositionQuestion")'" type="button" value="Volver a la Lista" />
                    <button id="btnDelete" type="submit" style="visibility:hidden"></button>
                </div>
            </div>

            <!-- Modal -->
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        @using (Html.BeginForm("Delete", "PositionQuestion", FormMethod.Post, new { encType = "multipart/form-data", name = "deleteuestion", @class = "form-group" }))
                        {
                            <div class="modal-header">
                                <h4 class="modal-title" id="myModalLabel">Eliminar Pregunta por Cargo</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="false">&times;</span></button>
                            </div>
                            <div class="modal-body">
                                @if (Model != null)
                                {
                                    <p id="msg">
                                    </p>
                                }
                            </div>
                            <div class="modal-footer">
                                <input type="button" class="btn btn-success btn-sm" data-dismiss="modal" value="Cancelar" />
                                <button type="submit" class="btn btn-default btn-sm">Aceptar</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
</html>

<script>
    function GetSelectedText() {
        var e = document.getElementById("CodCargo");
        var result = e.options[e.selectedIndex].text;

        document.getElementById("msg").innerHTML = `¿Desea eliminar Pregunta de cargo <strong>` + result + `</strong>?`;
    }
    GetSelectedText();
</script>