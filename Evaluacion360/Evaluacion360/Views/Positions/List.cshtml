@*@model IEnumerable<Evaluacion360.Models.ViewModels.SectionViewModel>*@

@model Evaluacion360.Models.ViewModels.ListPositionViewModel


@{
    Layout = "";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Listado de Cargos</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Pooled Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript">

        addEventListener("load", function()
            { setTimeout(hideURLbar, 0); },
            false);
            function hideURLbar()
            { window.scrollTo(0,1); }

         window.setTimeout(function () {
            $(".alert-success").fadeTo(500, 0).slideUp(500, function () {
            $(this).remove();
            }); }, 3000);
        window.setTimeout(function () {
            $(".alert-danger").fadeTo(500, 0).slideUp(500, function () {
            $(this).remove();
            }); }, 8000);

    </script>

    <!-- Bootstrap Core CSS -->
    <link href="~/Css-Pool/bootstrap.min.css" rel="stylesheet" type='text/css' />
    @*<link href="~/Css/bootstrap.min_sail.css" rel="stylesheet" type='text/css' />*@
    <!-- Custom CSS -->
    <link href="~/Css-Modernizer/style.css" rel='stylesheet' type='text/css' />
    <link href="~/Css-Pool/style2.css" rel='stylesheet' type='text/css' />
    <!-- Graph CSS -->
    <link href="~/Css-Pool/font-awesome.css" rel="stylesheet" type='text/css' />
    <link href="~/Css/jquery-ui.css" rel="stylesheet" />

    <!-- jQuery -->
    <script src="~/js/jquery-2.1.4.min.js"></script>
    <!-- //jQuery -->
    <!-- tables -->
    <link rel="stylesheet" type="text/css" href="~/Css/table-style.css" />
    <link rel="stylesheet" type="text/css" href="~/Css/basictable.css" />

    <script src="~/js/jquery.basictable.min.js"></script>
    <script src="~/js/datatables.js"></script>

    <!-- //tables -->
    <link href='//fonts.googleapis.com/css?family=Roboto:700,500,300,100italic,100,400' rel='stylesheet' type='text/css' />
    <link href='//fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <!-- lined-icons -->
    <link rel="stylesheet" href="~/Css/icon-font.min.css" type='text/css' />
    <!-- //lined-icons -->
</head>
<body>
    @if (ViewBag.Message != null)
    {
        if (ViewBag.Status)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong style="font-size:medium">@ViewBag.Message</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        if (!ViewBag.Status)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong style="font-size:medium">@ViewBag.Message</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    }

    <div class="agile-grids">
        <!-- tables -->
        <div class="agile-tables">
            <div class="-table-info">
                <div class="modal-header">
                    <h1 class="center-block">Cargos</h1>
                    <span>
                        <button class="btn btn-danger btn-sm" onclick="location.href='@Url.Content("~/Positions/Create/")'">Crear Cargo</button>
                        <button class="btn btn-primary btn-sm" onclick="location.href='@Url.Content("~/Home/Index/")'">Volver al Menú</button>
                    </span>
                </div>
                <table id="table">
                    <thead>
                        <tr>
                            <th> @Html.DisplayName("Codigo Cargo")</th>
                            <th> @Html.DisplayName("Nombre Cargo")</th>
                            <th> @Html.DisplayName("Fondo")</th>
                            <th> @Html.DisplayName("Ciclo")</th>
                            <th> @Html.DisplayName("Estado")</th>
                            <th> @Html.DisplayName("Acciones")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Secciones)
                        {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Codigo_Cargo)</td>
                            <td>@Html.DisplayFor(modelItem => item.Nombre_Cargo)</td>
                            <td>@Html.DisplayFor(modelItem => item.Fondo)</td>
                            <td>@Html.DisplayFor(modelItem => item.Ciclo)</td>
                            <td>@Html.DisplayFor(modelItem => item.IdState)</td>
                            <td>
                                <button class="btn btn-warning btn-xxs" onclick="location.href='@Url.Action("Edit","Positions", new { id=item.Codigo_Cargo})'" title="Editar">
                                    <span class="fa fa-pencil"></span>
                                </button>
                                <button class="btn btn-primary btn-xxs" onclick="location.href='@Url.Action("Details", "Positions", new {id=item.Codigo_Cargo})'" title="Detalles">
                                    <span class="fa fa-eye"></span>
                                </button>
                                <button class="btn btn-danger btn-xxs" onclick="location.href='@Url.Action("Delete", "Positions", new { id=item.Codigo_Cargo})'" title="Eliminar">
                                    <span class="fa fa-trash"></span>
                                </button>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="align-content-md-center">
        @{Html.RenderPartial("_Paginador", Model); }
    </div>
</body>
</html>

