@model Evaluacion360.Models.ViewModels.UsuarioViewModel

@{
    ViewBag.Title = "Ingreso de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml"; ;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registro de Usuarios</title>
    <!-- meta tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Pooled Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript">

        addEventListener("load", function()
            { setTimeout(hideURLbar, 0); },
            false);
            function hideURLbar()
            { window.scrollTo(0,1); }
    </script>

    <!-- Bootstrap Core CSS -->
    <link href="~/Css-Pool/bootstrap.min.css" rel="stylesheet" type='text/css' />
    <link href="~/Css/bootstrap.min_sail.css" rel="stylesheet" type='text/css' />
    <!-- Custom CSS -->
    <link href="~/Css-Pool/style2.css" rel='stylesheet' type='text/css' />
    <link href="~/Css/morris.css" rel="stylesheet" type="text/css" />
    <!-- Graph CSS -->
    <link href="~/Css-Pool/font-awesome.css" rel="stylesheet" />
    <link href="~/Css/jquery-ui.css" rel="stylesheet" />
    <!-- jQuery -->
    <script src="~/js/jquery-2.1.4.min.js"></script>
    <!-- //jQuery -->
    <link href='//fonts.googleapis.com/css?family=Roboto:700,500,300,100italic,100,400' rel='stylesheet' type='text/css' />
    <link href='//fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css' />
    <!-- lined-icons -->
    <link href="~/Css/icon-font.min.css" rel="stylesheet" type='text/css' />
    <!-- //lined-icons -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>


</head>
<body>
    @if (ViewBag.Message != null)
    {
        if (!ViewBag.Status)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong style="font-size:medium">@ViewBag.Message</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    }

    <h2> </h2>
    <div class="panel-body" , style="background-color:#fff">
        <form form="role" class="form-horizontal" action="Create" method="post">
            @Html.AntiForgeryToken()
            <h2 style="text-align:center; color:red; font-weight:500">Crear Usuario</h2>
            <br />
            <div class="form-group has-feedback">
                <label class="col-md-3 control-label ">Código de Usuario</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user-secret"></i></span>
                        @Html.EditorFor(model => model.Codigo_Usuario, new { htmlAttributes = new { type = "text", @class = "form-control1", @placeholder = "Código de Usuario", @required = true, @maxlength = 20, @minlength = 6, @ErrorMessage = "bbb", style = "width:70%; text-transform: uppercase", autofocus = "autofocus" } })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Nombre de Usuario</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        @Html.EditorFor(model => model.Nombre_Usuario, new { htmlAttributes = new { type = "text", @class = "form-control1", @placeholder = "Nombre de Usuario", @required = true, @maxlength = 50, @minlength = 6, @ErrorMessage = "bbb", style = "width:70%" } })
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Tipo de Usuario</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user-plus"></i></span>
                        @Html.DropDownListFor(model => model.Tipo_Usuario, (SelectList)ViewBag.TipoUsuario, "Seleccione Tipo de Usuario", new { type = "text", @class = "form-control1", style = "font-size: 70%; font-family: 'Roboto', sans-serif; line-height: 8px; width:70%" })
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Código de Cargo</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        @Html.DropDownListFor(model => model.Codigo_Cargo, (SelectList)ViewBag.Cargos, "Seleccione Tipo de Cargo", new { type = "text", @class = "form-control1", style = "font-size: 70%; font-family: 'Roboto', sans-serif; line-height: 8px; width:70%" })
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label">Password</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                        @Html.EditorFor(model => model.PASS, new { htmlAttributes = new { type = "password", @class = "form-control1", @placeholder = "Password", @required = true, @maxlength = 20, @minlength = 6, @ErrorMessage = "bbb", style = "width:70%" } })
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label">Confirmar Password</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { type = "password", @class = "form-control1", @placeholder = "Confirmar Password", style = "width:70%" } })
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label">Nombre Completo</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user-plus"></i></span>
                        @Html.EditorFor(model => model.Nombre_Completo, new { htmlAttributes = new { type = "text", @class = "form-control1", @placeholder = "Nombre Completo Usuario", @maxlength = 50, @minlength = 10, @ErrorMessage = "bbb", style = "width:70%" } })
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label">Fecha Nacimiento</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                        @Html.EditorFor(model => model.Fecha_Nacimiento, new { htmlAttributes = new { type = "date", @class = "form-control1", @placeholder = "Fecha Nacimiento", @ErrorMessage = "bbb", style = "width:70%" } })
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label">Rut</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-registered"></i></span>
                        @Html.EditorFor(model => model.Rut, new { htmlAttributes = new { type = "text", @class = "form-control1", @placeholder = "Rut", @required = true, @ErrorMessage = "bbb", style = "width:70%" } })
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>

            <div class="panel-footer">
                <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-8">
                        <button class="btn btn-danger" type="submit" style="background-color:red">Crear Usuario</button>
                        <input onclick="location.href='@Url.Action("List", "User")'" type="button" value="Volver a la Lista" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </form>
    </div>

    <!-- password and Rut -script -->

    <script>

        window.onload = function () {
            document.getElementById("Rut").onchange = checkRut;
            document.getElementById("PASS").onchange = validatePassword;
            document.getElementById("ConfirmPassword").onchange = validatePassword;
        }
        function checkRut() {
            var Rut = document.getElementById("Rut").value;
            // Despejar Puntos
            var valor = Rut.replace('.', '');
            // Despejar Guión
            valor = valor.replace('-', '');

            valor = valor.replace('.', '');

            // Aislar Cuerpo y Dígito Verificador
            var cuerpo = valor.slice(0, -1);
            var dv = valor.slice(-1).toUpperCase();

            // Formatear RUN
            Rut.value = cuerpo + '-' + dv

            // Si no cumple con el mínimo ej. (n.nnn.nnn)
            if (cuerpo.length < 7) { Rdocument.getElementById("Rut").setCustomValidity("RUT Incompleto"); return false; }

            // Calcular Dígito Verificador
            suma = 0;
            multiplo = 2;

            // Para cada dígito del Cuerpo
            for (i = 1; i <= cuerpo.length; i++) {

                // Obtener su Producto con el Múltiplo Correspondiente
                index = multiplo * valor.charAt(cuerpo.length - i);

                // Sumar al Contador General
                suma = suma + index;

                // Consolidar Múltiplo dentro del rango [2,7]
                if (multiplo < 7) { multiplo = multiplo + 1; } else { multiplo = 2; }

            }

            // Calcular Dígito Verificador en base al Módulo 11
            dvEsperado = 11 - (suma % 11);

            // Casos Especiales (0 y K)
            dv = (dv == 'K') ? 10 : dv;
            dv = (dv == 0) ? 11 : dv;

            // Validar que el Cuerpo coincide con su Dígito Verificador
            if (dvEsperado != dv) { document.getElementById("Rut").setCustomValidity("RUT ingresado no es válido"); return false; }

            // Si todo sale bien, eliminar errores (decretar que es válido)
            document.getElementById("Rut").setCustomValidity('');
        }


        function validatePassword() {
            var pass2 = document.getElementById("ConfirmPassword").value;
            var pass1 = document.getElementById("PASS").value;
            if (pass1 != pass2)
                document.getElementById("ConfirmPassword").setCustomValidity("Password y Password de confirmación no son iguales");
            else
                document.getElementById("ConfirmPassword").setCustomValidity('');
            //Si está vacío, significa que no hay error
        }
    </script>

    <!-- //password-script
    //js files -->
</body>
</html>


