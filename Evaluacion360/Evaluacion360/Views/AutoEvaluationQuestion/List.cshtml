    <!-- //tables -->
    <link href='//fonts.googleapis.com/css?family=Roboto:700,500,300,100italic,100,400' rel='stylesheet' type='text/css' />
    <link href='//fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <!-- lined-icons -->
    <link rel="stylesheet" href="~/Css/icon-font.min.css" type='text/css' />
    <!-- //lined-icons -->
</head>
<body>
    <div class="agile-grids">
        <!-- tables -->
        <div class="agile-tables">
            <div class="-table-info">
                <div class="modal-header">
                    <h1 class="center-block">Preguntas Auto Evaluación</h1>
                    <span>
                        <button class="btn btn-danger btn-sm" onclick="location.href='@Url.Content("~/AutoEvaluationQuestion/Create/")'">Crear Pregunta</button>
                        <button class="btn btn-primary btn-sm" onclick="location.href='@Url.Content("~/Home/Index/")'">Volver al Menú</button>
                    </span>
                </div>

                <table id="table">
                    <thead>
                        <tr>
                            <th> @Html.DisplayName("Nro Evaluación")</th>
                            <th> @Html.DisplayName("Proceso")</th>
                            <th> @Html.DisplayName("Sección")</th>
                            <th> @Html.DisplayName("Pregunta")</th>
                            <th> @Html.DisplayName("Nota")</th>
                            <th> @Html.DisplayName("Estado")</th>
                            <th> @Html.DisplayName("Acciones")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Secciones)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Numero_Evaluacion)</td>
                                <td>@Html.DisplayFor(modelItem => item.Codigo_Proceso)</td>
                                <td>@Html.DisplayFor(modelItem => item.Codigo_Seccion)</td>
                                <td>@Html.DisplayFor(modelItem => item.Numero_Pregunta)</td>
                                <td>@Html.DisplayFor(modelItem => item.Nota)</td>
                                <td>@Html.DisplayFor(modelItem => item.Estado_AE)</td>

                                <td>
                                    <button class="btn btn-warning btn-sm" onclick="location.href='@Url.Action("Edit","RandomQuestion", new { id=item.Codigo_Seccion})'" title="Editar">
                                        <span class="fa fa-pencil"></span>
                                    </button>
                                    <button class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("Details", "RandomQuestion", new {id=item.Codigo_Seccion})'" title="Detalles">
                                        <span class="fa fa-eye"></span>
                                    </button>
                                    <button class="btn btn-danger btn-sm" onclick="location.href='@Url.Action("Delete", "RandomQuestion", new { id=item.Codigo_Seccion})'" title="Eliminar">
                                        <span class="fa fa-trash"></span>
                                    </button>

                                </td>
                            </tr>
                        }
                    </tbody>
                    @if (Model.TotalDeRegistros > 0)
                    {
                        <tfoot>
                            <tr>
                                <th> @Html.DisplayName("Nro Evaluación")</th>
                                <th> @Html.DisplayName("Proceso")</th>
                                <th> @Html.DisplayName("Sección")</th>
                                <th> @Html.DisplayName("Pregunta")</th>
                                <th> @Html.DisplayName("Nota")</th>
                                <th> @Html.DisplayName("Estado")</th>
                                <th> @Html.DisplayName("Acciones")</th>
                            </tr>
                        </tfoot>
                    }
                </table>
            </div>
        </div>
    </div>
</body>
</html>


