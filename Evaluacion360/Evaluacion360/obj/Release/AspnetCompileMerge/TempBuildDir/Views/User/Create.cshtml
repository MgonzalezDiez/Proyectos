            }); }, 5000);
        }

    </script>

        <!-- Bootstrap Core CSS -->
        <link href="~/Css-Pool/bootstrap.min.css" rel="stylesheet" type='text/css' />
        <link href="~/Css/bootstrap.min_sail.css" rel="stylesheet" type='text/css' />

        <!-- Custom CSS -->
        <link href="~/Css-Pool/style2.css" rel='stylesheet' type='text/css' />

        <link href="~/Css-Modernizer/style4.css" rel="stylesheet" />
        <!-- Graph CSS -->
        <link href="~/Css-Pool/font-awesome.css" rel="stylesheet" />
        <link href="~/Css/jquery-ui.css" rel="stylesheet" />

        <!-- jQuery -->
        <script src="~/js/jquery-2.1.4.min.js"></script>
        <!-- //jQuery -->
        <link href='//fonts.googleapis.com/css?family=Roboto:700,500,300,100italic,100,400' rel='stylesheet' type='text/css' />
        <link href='//fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css' />
        <!-- lined-icons -->
        <link href="~/Css/icon-font.min.css" rel="stylesheet" type='text/css' />
        <!-- //lined-icons -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</head>

<body>
    @if (ViewBag.Message != null)
    {
        if (ViewBag.Status)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong style="font-size:medium">@ViewBag.Message</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        if (!ViewBag.Status)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong style="font-size:medium">@ViewBag.Message</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

    }

    <div class="container-fluid">
        <div class="outer-w3-agile mt-1">
            <div class="modal-header">
                <h1 class="center-block">Ingreso de Usuario</h1>
            </div>
            <form action="Create" method="Post" id="UserData">
                <div class="card-deck">
                    <div class="card box-shadow col-xl-6 col-md-6 my-lg-2 my-3">
                        <div class="card-body">
                            <label class="col-md-6 control-label ">Código de Usuario</label>
                            <div class="col-md-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user-secret"></i></span>
                                    @Html.EditorFor(model => model.Codigo_Usuario, new { htmlAttributes = new { type = "text", @class = "form-control1", @placeholder = "Código de Usuario", @required = "required", @maxlength = 20, @minlength = 6, autocomplete = "Codigo_Usuario", style = "text-transform: uppercase", autofocus = "autofocus" } })
                                    <div class="clearfix"></div>
                                </div>
                            </div>

                            <label class="col-md-6 control-label">Nombre de Usuario</label>
                            <div class="col-md-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    @Html.EditorFor(model => model.Nombre_Usuario, new { htmlAttributes = new { autocomplete = "Model.Nombre_Usuario", type = "text", @class = "form-control1", @placeholder = "Nombre de Usuario", @required = "required", @maxlength = 50, @minlength = 6 } })
                                    <div class="clearfix"></div>
                                </div>
                            </div>

                            <label class="col-md-6 control-label">Tipo de Usuario</label>
                            <div class="col-md-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user-plus"></i></span>
                                    @Html.DropDownListFor(model => model.Tipo_Usuario, (SelectList)ViewBag.TipoUsuario, "Seleccione Tipo de Usuario", new { @required = "required", type = "text", @class = "form-control1", style = "font-size: 70%; font-family: 'Roboto', sans-serif; line-height: 8px" })
                                    <div class="clearfix"></div>
                                </div>
                            </div>

                            <label class="col-md-6 control-label">Código de Cargo</label>
                            <div class="col-md-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    @Html.DropDownListFor(model => model.Codigo_Cargo, (SelectList)ViewBag.Cargos, "Seleccione Tipo de Cargo", new { @required = "required", type = "text", @class = "form-control1", style = "font-size: 70%; font-family: 'Roboto', sans-serif; line-height: 8px" })
                                    <div class="clearfix"></div>
                                </div>
                            </div>

                            <label class="col-md-6 control-label">Password</label>
                            <div class="col-md-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                                    @Html.EditorFor(model => model.PASS, new { htmlAttributes = new { autocomplete = "PASS", type = "password", @class = "form-control1", @placeholder = "Password", @required = "required", @maxlength = 20, @minlength = 6 } })
                                    <div class="clearfix"></div>
                                </div>
                            </div>

                            <label class="col-md-6 control-label">Confirmar Password</label>
                            <div class="col-md-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { autocomplete = "ConfirmPassword", type = "password", @required = "required", @class = "form-control1", @placeholder = "Confirmar Password" } })
                                    <div class="clearfix"></div>
                                </div>
                            </div>

                            <label class="col-md-6 control-label">Estado</label>
                            <div class="col-md-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-asterisk"></i></span>
                                    @Html.DropDownListFor(model => model.IdState, (SelectList)ViewBag.UserState, "Seleccione Estado", new { autocomplete = "IdState", @required = "required", type = "text", @class = "form-control1", style = "font-size: 70%; font-family: 'Roboto', sans-serif; line-height: 8px" })
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card box-shadow col-xl-6 col-md-6 my-lg-2 my-3">
                        <div class="card-body">
                            <label class="col-md-6 control-label">Nombre Completo</label>
                            <div class="col-md-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user-secret"></i></span>
                                    @Html.EditorFor(model => model.Nombre_Completo, new { htmlAttributes = new { autocomplete = "Nombre_Completo", type = "text", @class = "form-control1", @placeholder = "Nombre Completo Usuario", @required = "required", @maxlength = 50, @minlength = 10 } })
                                </div>
                            </div>

                            <label class="col-md-6 control-label">Fecha Nacimiento</label>
                            <div class="col-md-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    @Html.EditorFor(model => model.Fecha_Nacimiento, new { htmlAttributes = new { autocomplete = "Fecha_Nacimiento", type = "date", @class = "form-control1", @placeholder = "Fecha Nacimiento", } })
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                            <label class="col-md-6 control-label">Rut</label>
                            <div class="col-md-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-registered"></i></span>
                                    @Html.TextBoxFor(model => model.Rut, new { autocomplete = "Rut", @required = "required", @id = "Rut", @class = "form-control1 form-rut", @minlength = "7", @maxlength = "9", @style = "max-width: 265px;display: inline-block;" })<span>-</span>@Html.TextBoxFor(model => model.Dv, new { @required = "required", @id = "Dv", @class = "form-control1 form-dvrut form-control-sm", @type = "text", @maxlength = "1", autocomplete = "Dv", @style = "max-width: 35px;display: inline-block; text-align:center;" })

                                    <div class="clearfix"></div>
                                </div>
                            </div>
                            <label class="col-md-6 control-label">Fondo</label>
                            <div class="col-md-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-shopping-bag"></i></span>
                                    @Html.EditorFor(model => model.Fondo, new { htmlAttributes = new { autocomplete = "Fondo", @required = "required", type = "text", @class = "form-control1", @placeholder = "Fondo" } })
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                            <label class="col-md-6 control-label">Fecha Ingreso</label>
                            <div class="col-md-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    @Html.EditorFor(model => model.Fecha_Ingreso, new { htmlAttributes = new { autocomplete = "Fecha_Ingreso", type = "date", @class = "form-control1", @placeholder = "Fecha Ingreso" } })
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                            <label class="col-md-6 control-label">Fecha Término Contrato</label>
                            <div class="col-md-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    @Html.EditorFor(model => model.Fecha_Termino_Contrato, new { htmlAttributes = new { autocomplete = "Fecha_Termino_Contrato", type = "date", @class = "form-control1", @placeholder = "Fecha Término Contrato" } })
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                            <label class="col-md-6 control-label">Calidad Contrato</label>
                            <div class="col-md-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-qq"></i></span>
                                    @Html.EditorFor(model => model.Calidad_Contrato, new { htmlAttributes = new { autocomplete = "Calidad_Contrato", type = "text", @class = "form-control1", @placeholder = "Calidad Contrato", @required = "required" } })
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                            <label class="col-md-6 control-label">Tipo de Contrato</label>
                            <div class="col-md-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-archive"></i></span>
                                    @Html.EditorFor(model => model.Tipo_Contrato, new { htmlAttributes = new { autocomplete = "Tipo_Contrato", type = "text", @class = "form-control1", @placeholder = "Tipo Contrato", @required = "required" } })
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                            <label class="col-md-6 control-label">Código de Contrato</label>
                            <div class="col-md-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-code"></i></span>
                                    @Html.EditorFor(model => model.Codigo_Contrato, new { htmlAttributes = new { autocomplete = "Codigo_Contrato", type = "text", @class = "form-control1", @placeholder = "CódigoContrato", @required = "required" } })
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer">
                            <label class="col-md-3 control-label"></label>
                            <input class="btn btn-danger btn-sm" style="background-color:red; width:191px" id="userCreate" type="submit" value="Crear Usuario" />
                            <button class="btn btn-success btn-sm" id="backToList" onclick="location.href='@Url.Action("List", "User")'" type="button">Volver a la Lista</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- Fin Datos Adicionales del Usuario -->
    <!-- password and Rut -script -->

    <script type="text/javascript">

        window.onload = function () {
            document.getElementById("Dv").onchange = checkRut;
            document.getElementById("PASS").onchange = validatePassword;
            document.getElementById("ConfirmPassword").onchange = validatePassword;

        }

        function show_button(state, dsp) {
            document.getElementById("backToList").style.visibility = state;
            document.getElementById("backToList").style.display = dsp;
            document.getElementById("userCreate").style.visibility = state;
            document.getElementById("userCreate").style.display = dsp;
            document.getElementById("userCreate").style.backgroundColor = "red";
        }

        function checkRut() {
            var Rut = document.getElementById("Rut").value;
            var Dv = document.getElementById("Dv").value;
            Dv = Dv.toUpperCase();

            // Despejar Puntos
            var valor = Rut.replace('.', '');
            // Despejar Guión
            valor = valor.replace('-', '');

            valor = valor.replace('.', '');

            // Aislar Cuerpo y Dígito Verificador
            //var cuerpo = valor.slice(0, -1);
            //var dv = valor.slice(-1).toUpperCase();
            var cuerpo = valor;
            var dv = Dv;

            // Formatear RUN
            Rut.value = cuerpo + '-' + dv;

            // Si no cumple con el mínimo ej. (n.nnn.nnn)
            if (cuerpo.length < 7) { document.getElementById("Rut").setCustomValidity("RUT Incompleto"); return false; }

            // Calcular Dígito Verificador
            suma = 0;
            multiplo = 2;

            // Para cada dígito del Cuerpo
            for (i = 1; i <= cuerpo.length; i++) {

                // Obtener su Producto con el Múltiplo Correspondiente
                index = multiplo * valor.charAt(cuerpo.length - i);

                // Sumar al Contador General
                suma = suma + index;

                // Consolidar Múltiplo dentro del rango [2,7]
                if (multiplo < 7) { multiplo = multiplo + 1; } else { multiplo = 2; }

            }

            // Calcular Dígito Verificador en base al Módulo 11
            dvEsperado = 11 - (suma % 11);

            // Casos Especiales (0 y K)
            dv = (dv == 'K') ? 10 : dv;
            dv = (dv == 0) ? 11 : dv;

            // Validar que el Cuerpo coincide con su Dígito Verificador
            if (dvEsperado != dv) { document.getElementById("Rut").setCustomValidity("RUT ingresado no es válido"); return false; }

            // Si todo sale bien, eliminar errores (decretar que es válido)
            document.getElementById("Rut").setCustomValidity('');
        }


        function validatePassword() {
            var pass2 = document.getElementById("ConfirmPassword").value;
            var pass1 = document.getElementById("PASS").value;
            if (pass1 != pass2)
                document.getElementById("ConfirmPassword").setCustomValidity("Password y Password de confirmación no son iguales");
            else
                document.getElementById("ConfirmPassword").setCustomValidity('');
            //Si está vacío, significa que no hay error
        }

    </script>
    <script src="~/js/Utiles.js"></script>   
   
</body>
</html>