@model Evaluacion360.Models.ViewModels.AutoEvaluationQuestionViewModel

@{
    ViewBag.Title = "Preguntas Auto Evaluación";
    Layout = ""; ;
}

<!DOCTYPE html>

<html lang="es">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Preguntas Auto Evaluación</title>
    <!-- meta tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Pooled Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript">

        addEventListener("load", function()
            { setTimeout(hideURLbar, 0); },
            false);
            function hideURLbar()
            { window.scrollTo(0,1); }

        window.setTimeout(function () {
            $(".alert-success").fadeTo(500, 0).slideUp(500, function () {
            $(this).remove();
            }); }, 3000);

        window.setTimeout(function () {
            $(".alert-danger").fadeTo(500, 0).slideUp(500, function () {
            $(this).remove();
            }); }, 5000);
    </script>

    <!-- tables -->
    <link rel="stylesheet" type="text/css" href="~/Css/table-style.css" />
    <link rel="stylesheet" type="text/css" href="~/Css/basictable.css" />
    <!-- //tables -->

    <!-- Bootstrap Core CSS -->
    <link href="~/Css-Pool/bootstrap.min.css" rel="stylesheet" type='text/css' />

    <!-- Custom CSS -->
    <link href="~/Css-Pool/style2.css" rel='stylesheet' type='text/css' />
    <link href="~/Css-Modernizer/style.css" rel="stylesheet" />

    <!-- Graph CSS -->
    <link href="~/Css-Pool/font-awesome.css" rel="stylesheet" />
    <link href="~/Css/jquery-ui.css" rel="stylesheet" />

    <!-- jQuery -->
    <script src="~/js/jquery-2.1.4.min.js"></script>
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet">
    <!-- //jQuery -->

    <link href='//fonts.googleapis.com/css?family=Roboto:700,500,300,100italic,100,400' rel='stylesheet' type='text/css' />
    <link href='//fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css' />

    <!-- lined-icons -->
    <link href="~/Css/icon-font.min.css" rel="stylesheet" type='text/css' />
    <!-- //lined-icons -->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</head>
<body>
    @if (ViewBag.Message != null)
    {
        if (ViewBag.Status)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong style="font-size:medium">@ViewBag.Message</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        else
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong style="font-size:medium">@ViewBag.Message</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    }
    <div id="mensaje">

    </div>

    <div class="panel-body" , style="background-color:#fff">
        <div class="notification_header" style="text-align:center">
            <h1 class="center-block">Responder Auto Evaluación</h1>
        </div>
        <br />

        <form form="role" class="form-horizontal" action="Create" method="post" id="formAEQ" , name="formAEQ">
            @Html.AntiForgeryToken()

            <input type="hidden" id="urlGet" name="urlGet" value="/AutoEvaluationQuestion/GetQuestionByUser" />
            <input type="hidden" id="urlPost" name="urlPost" value="/AutoEvaluationQuestion/Edit" />

            <div class="form-group has-feedback">
                <label class="col-md-3 control-label ">Proceso</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-puzzle-piece"></i></span>
                        @Html.HiddenFor(model => model.Codigo_Proceso, new { @id = "codProc" })
                        @Html.EditorFor(model => model.NombreProceso, new { htmlAttributes = new { id = "nomProc", @readonly = "readonly", type = "text", @class = "form-control1", @placeholder = "Proceso", @required = "required", autofocus = "autofocus" } })
                    </div>
                </div>
            </div>

            <div class="form-group has-feedback">
                <label class="col-md-3 control-label ">Nro Evaluación</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-hashtag"></i></span>
                        @Html.EditorFor(model => model.Numero_Evaluacion, new { htmlAttributes = new { @id = "numEval", @readonly = "readonly", type = "text", @class = "form-control1", @placeholder = "Nro. de Evaluación", @required = "required" } })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label">Usuario</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        @Html.HiddenFor(model => model.Codigo_Usuario, new { id = "codUser" })
                        @Html.EditorFor(model => model.NombreUsuario, new { htmlAttributes = new { id = "nomUser", @readonly = "readonly", type = "text", @class = "form-control1", @placeholder = "Nro. de Evaluación", @required = "required" } })
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group has-feedback">
                <label class="col-md-3 control-label ">Metas</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-tasks"></i></span>
                        @Html.EditorFor(model => model.Metas, new { htmlAttributes = new { id = "metas", @required = "required", type = "text", minlength = 6, @class = "form-control1", @placeholder = "Ingrese Metas" } })
                    </div>
                </div>
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group has-feedback">
                <label class="col-md-3 control-label ">Logros</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-arrow-circle-up"></i></span>
                        @Html.EditorFor(model => model.Logros, new { htmlAttributes = new { id = "logros", @required = "required", type = "text", minlength = 6, @class = "form-control1", @placeholder = "Ingrese logros" } })
                    </div>
                </div>
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group has-feedback">
                <label class="col-md-3 control-label ">Dominio</label>
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-th-list"></i></span>
                        @Html.DropDownListFor(model => model.Codigo_Seccion, (SelectList)ViewBag.Sections, "Seleccione Dominio", new { id = "codSec", @disabled = "disabled", @required = "required", type = "text", @class = "form-control1" })
                    </div>
                </div>
            </div>

            <div class="panel-footer">
                <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-8">
                        <button type="button" class="btn btn-success btn-sm" id="backToList" onclick="location.href='@Url.Action("Index", "Home")'">Volver al Menú</button>
                    </div>
                </div>
            </div>
        </form>

        <!-- Modal -->
        <div class="modal fade" id="modalNotas" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header" style="padding-bottom:1px">
                        <h3 class="modal-title" id="myModalLabel">Ingreso de Notas Auto Evaluación</h3>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="false">&times;</span></button>
                    </div>
                    <div class="modal-body" style="padding-top:1px">
                        @using (Html.BeginForm("Create", "AutoEvaluationQuestion", FormMethod.Post, new { id = "myForm", encType = "multipart/form-data", @class = "form-group" }))
                        {
                            <div class="agile-tables" style="padding:0px">
                                <div class="-table-info">
                                    <table id="table">
                                        <thead>
                                            <tr>
                                                <th> @Html.DisplayName("Numero Pregunta")</th>
                                                <th> @Html.DisplayName("Texto")</th>
                                                <th> @Html.DisplayName("Nota")</th>
                                            </tr>
                                        </thead>
                                        <tbody id="preguntas">
                                        </tbody>
                                    </table>
                                    <div class="container">
                                        <div id="loading" class="text-center" style="display:none">
                                            <img src="~/Content/ajax-loader.gif" />
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-success btn-sm" data-dismiss="modal">Cancelar</button>
                                        <button type="button" class="btn btn-default btn-sm" id="btn">Aceptar</button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
            integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
            crossorigin="anonymous"></script>


    <script src="~/js/Utiles.js"></script>
</body>
</html>


