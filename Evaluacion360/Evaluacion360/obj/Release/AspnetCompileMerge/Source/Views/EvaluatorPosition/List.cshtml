
@model Evaluacion360.Models.ViewModels.ListEPViewModel

@{
    Layout = "";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cargos Evaluadores</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Pooled Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript">

        addEventListener("load", function()
            { setTimeout(hideURLbar, 0); },
            false);
            function hideURLbar()
            { window.scrollTo(0,1); }
    </script>

    <!-- Bootstrap Core CSS -->
    <link href="~/Css-Pool/bootstrap.min.css" rel="stylesheet" type='text/css' />
    @*<link href="~/Css/bootstrap.min_sail.css" rel="stylesheet" type='text/css' />*@
    <!-- Custom CSS -->
    <link href="~/Css-Modernizer/style.css" rel="stylesheet" />
    <link href="~/Css-Pool/style2.css" rel='stylesheet' type='text/css' />
    <!-- Graph CSS -->
    <link href="~/Css-Pool/font-awesome.css" rel="stylesheet" type='text/css' />
    <link href="~/Css/jquery-ui.css" rel="stylesheet" />

    <!-- jQuery -->
    <script src="~/js/jquery-2.1.4.min.js"></script>
    <!-- //jQuery -->
    <!-- tables -->
    <link rel="stylesheet" type="text/css" href="~/Css/table-style.css" />
    <link rel="stylesheet" type="text/css" href="~/Css/basictable.css" />

    <script src="~/js/jquery.basictable.min.js"></script>
    <script src="~/js/datatables.js"></script>

    <!-- //tables -->
    <link href='//fonts.googleapis.com/css?family=Roboto:700,500,300,100italic,100,400' rel='stylesheet' type='text/css' />
    <link href='//fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <!-- lined-icons -->
    <link rel="stylesheet" href="~/Css/icon-font.min.css" type='text/css' />
    <!-- //lined-icons -->
</head>
<body>
    <div class="agile-grids">
        <!-- tables -->
        <div class="agile-tables">
            <div class="-table-info">
                <div class="modal-header">
                    <h1 class="center-block">Cargos Evaluadores</h1>
                    <span>
                        <button class="btn btn-danger btn-sm" onclick="location.href='@Url.Content("~/EvaluatorPosition/Create/")'">Crear Evaluador</button>
                        <button class="btn btn-primary btn-sm"  onclick="location.href='@Url.Content("~/Home/Index/")'">Volver al Menú</button>
                    </span>
                </div>
                <table id="table">
                    <thead>
                        <tr>
                            <th> @Html.DisplayName("Cargo Evaluado")</th>
                            <th> @Html.DisplayName("Cargo Evaluador")</th>
                            <th> @Html.DisplayName("Ponderación")</th>
                            <th> @Html.DisplayName("Estado")</th>
                            <th> @Html.DisplayName("Acciones")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Secciones)
                        {
                        <tr>
                            <td>@item.Nombre_Cargo_Evaluado</td>
                            <td>@item.Nombre_Cargo </td>
                            <td>@item.Ponderacion</td>
                            <td>@item.IdState</td>
                            <td>
                                <button class="btn btn-warning btn-xxs" onclick="location.href='@Url.Action("Edit","EvaluatorPosition", new { codCargo=item.Codigo_Cargo, codCargoEval=item.Cod_Cargo_Evaluado })'" title="Editar">
                                    <span class="fa fa-pencil"></span>
                                </button>
                                <button class="btn btn-primary btn-xxs" onclick="location.href='@Url.Action("Details", "EvaluatorPosition", new {codCargo=item.Codigo_Cargo, codCargoEval=item.Cod_Cargo_Evaluado})'" title="Detalles">
                                    <span class="fa fa-eye"></span>
                                </button>
                                <button class="btn btn-danger btn-xxs" onclick="location.href='@Url.Action("Delete", "EvaluatorPosition", new {codCargo=item.Codigo_Cargo, codCargoEval=item.Cod_Cargo_Evaluado })'" title="Eliminar">
                                    <span class="fa fa-trash"></span>
                                </button>

                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    @if (Model.TotalDeRegistros > 0)
    {
        <div class="align-content-md-center">
            @{Html.RenderPartial("_Paginador", Model); }
        </div>
    }
</body>
</html>


