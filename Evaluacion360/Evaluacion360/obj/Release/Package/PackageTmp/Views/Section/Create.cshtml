@model Evaluacion360.Models.ViewModels.SectionViewModel

@{
    ViewBag.Title = "Ingreso de Secciones";
    Layout = ""; ;
}

<!DOCTYPE html>

<html lang="es">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registro de Dominio</title>
    <!-- meta tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Pooled Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript">

        addEventListener("load", function()
            { setTimeout(hideURLbar, 0); },
            false);
            function hideURLbar()
            { window.scrollTo(0,1); }

        window.setTimeout(function () {
            $(".alert-success").fadeTo(500, 0).slideUp(500, function () {
            $(this).remove();
            }); }, 3000);

        window.setTimeout(function () {
            $(".alert-danger").fadeTo(500, 0).slideUp(500, function () {
            $(this).remove();
            }); }, 5000);
    </script>

    <!-- Bootstrap Core CSS -->
    <link href="~/Css-Pool/bootstrap.min.css" rel="stylesheet" type='text/css' />
    @*<link href="~/Css/bootstrap.min_sail.css" rel="stylesheet" type='text/css' />*@

    <!-- Custom CSS -->
    <link href="~/Css-Pool/style2.css" rel='stylesheet' type='text/css' />
    <link href="~/Css-Modernizer/style.css" rel="stylesheet" />
    @*<link href="~/Css/morris.css" rel="stylesheet" type="text/css" />*@
    <!-- Graph CSS -->
    <link href="~/Css-Pool/font-awesome.css" rel="stylesheet" />
    
    <link href="~/Css/jquery-ui.css" rel="stylesheet" />
    <!-- jQuery -->
    <script src="~/js/jquery-2.1.4.min.js"></script>
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet">
    <!-- //jQuery -->
    <link href='//fonts.googleapis.com/css?family=Roboto:700,500,300,100italic,100,400' rel='stylesheet' type='text/css' />
    <link href='//fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css' />
    <!-- lined-icons -->
    <link href="~/Css/icon-font.min.css" rel="stylesheet" type='text/css' />
    <!-- //lined-icons -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</head>
<body>
    @if (ViewBag.Message != null)
    {
        if (ViewBag.Status)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong style="font-size:medium">@ViewBag.Message</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        else
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong style="font-size:medium">@ViewBag.Message</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    }

    <div class="panel-body">
        <div class="notification_header" style="text-align:center">
            <h1 class="center-block">Crear Dominio</h1>
        </div>
        <br />

        <form form="role" class="form-horizontal" action="Create" method="post">
            <div class="card box-shadow col-xl-7 ">
                @Html.AntiForgeryToken()
                <div class="form-group has-feedback">
                    <br />
                    <label class="col-md-3 control-label ">Código de Dominio</label>
                    <div class="col-md-9">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user-secret"></i></span>
                            @Html.EditorFor(model => model.Codigo_Seccion, new { htmlAttributes = new { type = "text", @class = "form-control1", @placeholder = "Código de Dominio", @required = true, @maxlength = 10, style = "text-transform: uppercase", autofocus = "autofocus" } })
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">Nombre de Dominio</label>
                    <div class="col-md-9">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-sticky-note"></i></span>
                            @Html.EditorFor(model => model.Nombre_Seccion, new { htmlAttributes = new { type = "text", @class = "form-control1", @placeholder = "Nombre de Dominio", @required = true, @maxlength = 50 } })
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">Ponderación</label>
                    <div class="col-md-9">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-plus"></i></span>
                            @Html.EditorFor(model => model.Ponderacion_S, new { htmlAttributes = new { id = "decimales", type = "text", @class = "form-control1", @placeholder = "00,0", @required = true, @maxlength = 18 } })
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">Estado</label>
                    <div class="col-md-9">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-asterisk"></i></span>
                            @Html.DropDownListFor(model => model.IdState, (SelectList)ViewBag.SectionState, "Seleccione Estado", new { type = "text", @class = "form-control1", style = "font-size: 70%; font-family: 'Roboto', sans-serif; line-height: 8px" })
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>

                <div class="panel-footer">
                    <div class="form-group">
                        <label class="col-md-2 control-label"></label>
                        <div class="justify-content-center">
                            <input class="btn btn-danger btn-sm" id="userCreate" type="submit" value="Crear Dominio" />
                            <button type="button" class="btn btn-success btn-sm" id="backToList" onclick="location.href='@Url.Action("List", "Section")'">Volver a la Lista</button>
                            <button type="button" class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("List", "Excel")'">Importar Excel</button>
                        </div>
                    </div>
                </div>

                <!-- Modal -->
                <div class="modal fade" id="SectionExcel" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="myModalLabel">Importar Dominio</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="false">&times;</span></button>
                            </div>
                            <div class="modal-body">
                                <div id="loading" class="hidden">
                                    @*<img src="~/Content/ajax-loader.gif" />*@
                                </div>
                                <input type="file" id="file" class="form-control1" />
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-success btn-sm" data-dismiss="modal">Cancelar</button>
                                <input  type="button" class="btn btn-danger btn-sm" id="btnUpload" value="Subir Excel" data-dismiss="modal"  />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <script src="~/js/Utiles.js"></script>
</body>
</html>


