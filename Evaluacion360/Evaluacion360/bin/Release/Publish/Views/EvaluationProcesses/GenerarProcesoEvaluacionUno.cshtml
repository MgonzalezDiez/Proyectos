@model Evaluacion360.Models.ViewModels.EvProcsGenerationUno

@{
    ViewBag.Title = "Generar Procesos de Evaluación";
    Layout = ""; ;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Generar Procesos de Evaluación</title>
    <!-- meta tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Pooled Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript">

        addEventListener("load", function()
            { setTimeout(hideURLbar, 0); },
            false);
            function hideURLbar()
            { window.scrollTo(0,1); }

        window.setTimeout(function () {
            $(".alert-danger").fadeTo(500, 0).slideUp(500, function () {
            $(this).remove();
            }); }, 10000);

        window.setTimeout(function () {
            $(".alert-success").fadeTo(500, 0).slideUp(500, function () {
            $(this).remove();
            }); }, 3000);
    </script>

    <!-- Bootstrap Core CSS -->
    <link href="~/Css-Pool/bootstrap.min.css" rel="stylesheet" type='text/css' />

    <!-- Custom CSS -->
    <link href="~/Css-Pool/style2.css" rel='stylesheet' type='text/css' />
    <link href="~/Css-Modernizer/style.css" rel="stylesheet" />

    <!-- Graph CSS -->
    <link href="~/Css-Pool/font-awesome.css" rel="stylesheet" />
    <link href="~/Css/jquery-ui.css" rel="stylesheet" />

    <!-- jQuery -->
    <!--<script src="~/js/jquery-2.1.4.min.js"></script>-->
    <script src="~/js/jquery-3.4.1.min.js"></script>


    <!-- //jQuery -->
    <link href='//fonts.googleapis.com/css?family=Roboto:700,500,300,100italic,100,400' rel='stylesheet' type='text/css' />
    <link href='//fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css' />
    <!-- lined-icons -->
    <link href="~/Css/icon-font.min.css" rel="stylesheet" type='text/css' />
    <!-- //lined-icons -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</head>

<body>
    @if (ViewBag.Message != null)
    {
        if (ViewBag.Status)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong style="font-size:medium">@ViewBag.Message</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        if (!ViewBag.Status)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong style="font-size:medium">@ViewBag.Message</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

    }

    <div class="panel-body">
        <form form="role" class="form-horizontal" action="GenerarProcesoEvaluacionUno" method="post">
            @Html.AntiForgeryToken()
            <div class="notification_header" style="text-align:center">
                <h1 class="center-block">Generar Proceso de Evaluación</h1>
                <p class="center-block" style="font-size:22px">Por usuario</p>
            </div>
            <br />
            <div class="form-group has-feedback">
                <label class="col-md-3 control-label ">Usuario</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        @Html.DropDownListFor(model => model.Codigo_Usuario, (SelectList)ViewBag.Usuarios, "Seleccione Usuario para Evaluación", new { required = "required", type = "text", @class = "form-control1", style = "font-size: 70%; font-family: 'Roboto', sans-serif; line-height: 8px" })
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>


            <div class="form-group has-feedback">
                <label class="col-md-3 control-label">Proceso</label>
                <div class="col-md-9">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-gear"></i></span>
                        @Html.DropDownListFor(model => model.Codigo_Proceso, (SelectList)ViewBag.Procesos, "Seleccione Proceso para Evaluación", new { required = "required", type = "text", @class = "form-control1", style = "font-size: 70%; font-family: 'Roboto', sans-serif; line-height: 8px" })
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-8">
                        <input class="btn btn-danger btn-sm" style="background-color:red;" id="processCreate" type="submit" value="Generar Proceso" />
                        <button class="btn btn-success btn-sm" id="backToList" type="button" onclick="location.href='@Url.Action("Index", "Home")'">Volver al menú</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

</body>

</html>



